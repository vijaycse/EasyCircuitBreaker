      <param name="File" value="C:/Users/Vijay-Ramlingam/Work/log/genericClient.log"/>
      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="%d
                %-5p  [%c{1}] %m %n" />
      </layout>
   </appender> 
   
